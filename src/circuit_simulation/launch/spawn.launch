<?xml version="1.0" encoding="UTF-8"?>
<launch>

	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find
circuit_simulation)/models/rover.urdf'" />
	<node name="my_robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model rover -x -10 -y 45 -z 4 -Y 0" />

	<rosparam file="$(find circuit_simulation)/config/config.yaml" command="load" />
	<node name="controller_spawner" pkg="controller_manager" type="spawner" ns="/rover" args="joint_wheel_front_right_velocity_controller joint_wheel_front_left_velocity_controller 
  joint_wheel_back_right_velocity_controller joint_wheel_back_left_velocity_controller 
  joint_state_controller --shutdown-timeout 3" />

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
		<remap from="/joint_states" to="/rover/joint_states" />
	</node>

</launch>